FROM node:18-alpine

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

ARG REACT_APP_API_BASE_URL=http://localhost/api
ARG REACT_APP_KEYCLOAK_URL=http://localhost/auth
ARG REACT_APP_KEYCLOAK_REALM=capitec-dispute-realm
ARG REACT_APP_KEYCLOAK_CLIENT_ID=capitec-dispute-client
ARG PUBLIC_URL=/portal

ENV REACT_APP_API_BASE_URL=$REACT_APP_API_BASE_URL
ENV REACT_APP_KEYCLOAK_URL=$REACT_APP_KEYCLOAK_URL
ENV REACT_APP_KEYCLOAK_REALM=$REACT_APP_KEYCLOAK_REALM
ENV REACT_APP_KEYCLOAK_CLIENT_ID=$REACT_APP_KEYCLOAK_CLIENT_ID
ENV PUBLIC_URL=$PUBLIC_URL

RUN npm run build

RUN npm install -g serve

EXPOSE 3000

CMD ["serve", "-s", "build", "-l", "3000"]
